{
  "buildCommand": "echo 'Static site, no build needed'",
  "outputDirectory": ".",
  "public": true,
  "routes": [
    {
      "src": "^/(?!.*\\.).*$",
      "dest": "/"
    }
  ],
  "headers": [
    {
      "source": "/config\\.js",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=0, no-cache, must-revalidate"
        },
        {
          "key": "Pragma",
          "value": "no-cache"
        }
      ]
    },
    {
      "source": "/auth\\.js",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=0, no-cache, must-revalidate"
        },
        {
          "key": "Pragma",
          "value": "no-cache"
        }
      ]
    },
    {
      "source": ".*\\.html$",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=300, must-revalidate"
        }
      ]
    },
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "Access-Control-Allow-Origin",
          "value": "*"
        },
        {
          "key": "Access-Control-Allow-Methods",
          "value": "GET, POST, OPTIONS"
        }
      ]
    }
  ]
}